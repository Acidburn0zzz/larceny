	SCHEME_PGM=larceny
	SETUP_ARGS="${SETUP_ARGS} 'scheme: 'larceny  'host: 'linux86 'sassy"
	FINAL_LARCENY_BIN=larceny.bin
	HEAP_DUMP_SCRIPT=src/Build/iasn-larceny-heap.sch
	DIRNAME=default
	MAKETEXTSAFE="iconv -t utf8 -c"
