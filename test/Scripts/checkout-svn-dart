    case "`uname`" in
	SunOS)
	echo "Setup arguments not specified; assuming Solaris native build."
	SCHEME_PGM=larceny
	SETUP_ARGS="${SETUP_ARGS} 'scheme: 'larceny  'host: 'solaris 'native"
	FINAL_LARCENY_BIN=larceny.bin
	HEAP_DUMP_SCRIPT=src/Build/sparc-larceny-heap.sch
